---
import "../styles/base.css";
export interface Props {
    title: string;
}

const { title } = Astro.props;
const image = "https://github.com/mertturkmenoglu.png";
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content="Mert Turkmenoglu personal website" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.ico" />
        <meta name="generator" content={Astro.generator} />
        <link rel="sitemap" href="/sitemap-index.xml" />
        <meta property="og:title" content={title} />
        <meta property="og:description" content="Mert Turkmenoglu personal website" />
        <meta property="og:url" content="https://mertturkmenoglu.com" />
        <meta property="og:site_name" content="Mert Turkmenoglu" />
        <meta property="og:locale" content="en_US" />
        <meta property="og:image" content={image} />
        <meta property="og:image:alt" content="Profile Picture" />
        <meta property="og:type" content="website" />
        <meta name="twitter:card" content="summary" />
        <meta name="twitter:creator" content="@capreaee" />
        <meta name="twitter:title" content={title} />
        <meta name="twitter:description" content="Mert Turkmenoglu personal website" />
        <meta name="twitter:image" content={image} />
        <meta name="twitter:image:alt" content="Profile Picture" />
        <title>{title}</title>
        <script type="text/partytown" async src="https://www.googletagmanager.com/gtag/js?id=G-EP3VF2S4P8"></script></head
    >

    <script type="text/partytown">
        window.dataLayer = window.dataLayer || [];
        function gtag() {
            dataLayer.push(arguments);
        }
        gtag("js", new Date());

        gtag("config", "G-EP3VF2S4P8");
    </script>
    <body class="container w-11/12 sm:w-full mx-4 sm:mx-auto my-16 bg-[#0a0a0a] text-white">
        <slot />
    </body>
</html>
