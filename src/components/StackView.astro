    { category: "Languages", items: langs },
    { category: "Backend", items: backend },
    { category: "Cloud", items: cloud },
    { category: "Frontend", items: frontend },
    { category: "Databases", items: databases },
    { category: "Testing", items: testing },
    { category: "Other", items: other },
